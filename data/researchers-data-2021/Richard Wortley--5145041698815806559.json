": 45333638}, {"title": "maternal and paternal filicide case studies from the australian homicide project", "year": 2016, "source": "child abuse review", "authors": [{"name": "li eriksson", "affiliation": "griffith university"}, {"name": "paul mazerolle", "affiliation": "griffith university"}, {"name": "richard wortley", "affiliation": "university college london"}, {"name": "holly johnson", "affiliation": "university of ottawa"}], "id": 125708707}, {"title": "a classification of techniques for controlling situational precipitators of crime", "year": 2001, "source": "security journal", "authors": [{"name": "richard wortley", "affiliation": "griffith university"}], "id": 74209221}, {"title": "child pornography on the internet", "year": 2006, "source": "", "authors": [{"name": "richard wortley"}, {"name": "stephen walkley smallbone"}]}], "ANDS-Grants": [{"description": "The costs of sexual violence and abuse are enormous and involve immediate and long-term negative effects for the life of victims, families and the society. This project will investigate and provide critical evidence-based knowledge on the effectiveness of situational prevention measures.", "title": "Discovery Projects - Grant ID: DP130100501", "id": "535411", "institutions": ["Griffith University"], "key": "http://purl.org/au-research/grants/arc/DP130100501", "researchers": ["Dr Benoit Leclerc", "Prof Richard Wortley", "Dr Danielle Reynald", "Prof Stephen Smallbone"], "status": "closed", "fundingAmount": 379500, "fundingScheme": "Discovery Projects", "startDate": 2013, "endDate": 2015, "dateTimeModified": "2015-09-14T03:00:37Z", "dateTimeCreated": "2015-04-15T05:10:35Z", "funder": ["Australian Research Council"], "managingInstitution": ["Griffith University"], "principalInvestigator": null, "purl": "http://purl.org/au-research/grants/arc/DP130100501", "identifiers": ["http://purl.org/au-research/grants/arc/DP130100501", "DP130100501"], "subjects": ["CRIMINOLOGY", "STUDIES IN HUMAN SOCIETY", "crime event", "crime prevention", "sexual violence and abuse"], "links": [{"rel": "self", "href": "http://researchdata.edu.au/api/v2.0/registry/activities/grants/535411"}]}, {"description": "Since the advent of the internet and digital cameras, the market for child exploitation material (CEM) has boomed. This project aims to explore how the visual appearance of warning messages influences internet users. It plans to conduct a randomised controlled experiment with na&iuml;ve participants on a real-life website to test the effectiveness of messages designed to discourage viewers of legal &lsquo;barely legal&rsquo; pornography. It is anticipated that results will assist policing efforts by indicating whether warnings can be used to dissuade first-time CEM viewers and whether differences exist between harm or deterrent-focused messages.", "title": "Discovery Projects - Grant ID: DP160100601", "id": "663804", "institutions": ["University of Tasmania"], "key": "http://purl.org/au-research/grants/arc/DP160100601", "researchers": ["Dr Jeremy Prichard", "Dr Caroline Spiranovic", "Prof Paul Watters", "Prof Richard Wortley", "A/Prof Tony Krone"], "status": "active", "fundingAmount": 299031, "fundingScheme": "Discovery Projects", "startDate": 2016, "endDate": 2020, "dateTimeModified": "2018-10-02T04:21:34Z", "dateTimeCreated": "1970-01-01T00:00:00Z", "funder": ["Australian Research Council"], "managingInstitution": ["University of Tasmania"], "principalInvestigator": null, "purl": "http://purl.org/au-research/grants/arc/DP160100601", "identifiers": ["http://purl.org/au-research/grants/arc/DP160100601", "DP160100601"], "subjects": ["CRIMINOLOGY", "STUDIES IN HUMAN SOCIETY"], "links": [{"rel": "self", "href": "http://researchdata.edu.au/api/v2.0/registry/activities/grants/663804"}]}]}